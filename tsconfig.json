{
    "include": ["src", "test", "demo/website"],
    "exclude": ["index.ts"],
    "compilerOptions": {
        "sourceMap": true,
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "baseUrl": ".",
        "outDir": "./build",
        "paths": {
            "src/*": ["src/*"],
            "tianyu-store": ["src/index.ts"],
            "tianyu-store/*": ["src/*"],
            "web/*": ["demo/website/*"]
        }
    }
}
